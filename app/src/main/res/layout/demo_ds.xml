<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="11"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="@drawable/ass_common_border"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="激活数据源"
                android:layout_height="50dp"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="测试出错"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                />
            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="看文档"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ass_common_border"
            android:padding="10dp"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:textColor="#7832ff"
                android:text="log here"
                android:textSize="13sp"
                />
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:id="@+id/container_doc"
        android:padding="10dp"
        android:layout_marginTop="40dp"

        >

        <ScrollView
            android:layout_width="match_parent"
            android:background="@drawable/ass_common_border_strike"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_ball"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher"
                    android:background="@drawable/ass_common_border"
                    />
                <TextView
                    android:id="@+id/tv_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="111"
                    />
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</FrameLayout>